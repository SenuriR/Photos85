<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>


<GridPane hgap="10" vgap="10" prefHeight="500.0" prefWidth="500.0" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">    
    <columnConstraints>
        <ColumnConstraints minWidth="10" prefWidth="100" />
        <ColumnConstraints minWidth="10" prefWidth="100" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10" prefHeight="30" />
        <RowConstraints minHeight="10" prefHeight="30" />
        <RowConstraints minHeight="10" prefHeight="30" />
        <RowConstraints minHeight="10" prefHeight="30" />
    </rowConstraints>
    <children>
        <Label text="Login" GridPane.columnSpan="2" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Label text="Username:" GridPane.rowIndex="1" />
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button fx:id="loginButton" text="Log in" GridPane.columnIndex="1" GridPane.rowIndex="3" onAction="#handleLoginButton" maxWidth="1.7976931348623157E308" />
    </children>
</GridPane>
